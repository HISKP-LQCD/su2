# Input file example for the u1 runs
gauge_group: su2

geometry:
  L : 8
  T : 16
  ndims : 3

# hmc parameters
hmc:
  do_mcmc: true
  seed: 93746
  n_save: 10
  n_meas: 20
#  restart: true
  heat: true
  configname: ""
  lenghty_conf_name: false
  conf_dir: "./confs/"

integrator:
  name: leapfrog
  N_rev: 0
  n_steps: 50
  tau: 1.0
  exponent: 0


monomials:
  gauge:
    beta: 2.2
    anisotropic:
      xi: 1.0

omeas:
  res_dir: ./omeas/
  verbosity: 1
  icounter: 0
  nstep: 1
  gradient_flow:
    epsilon: 0.01
    tmax: 2.0
  glueball:
    do_APE_smearing: true
    APE_smearing:
      n: 10
      alpha: 0.7
    interpolator:
      type: fatL
      spatial: true
      rmin: 2
      rmax: 8
      save: true
    correlator: true
