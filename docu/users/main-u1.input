# Input file example for the u1-hmc program

geometry:
  L : 4
  T : 8
  ndims : 3

# hmc parameters
hmc:
  do_mcmc: true
  seed: 93746
  n_save: 10
  n_meas: 100
#  restart: true
  heat: true
  configname: ""
  lenghty_conf_name: false
  conf_dir: "./confs/"

integrator:
  name: leapfrog
  N_rev: 0
  n_steps: 50
  tau: 1.0
  exponent: 0


monomials:
  gauge:
    beta: 2.2
    anisotropic:
      xi: 1.0

omeas:
  res_dir: ./omeas/
  verbosity: 1
  icounter: 0
  nstep: 1
  gradient_flow:
    epsilon: 0.01
    tmax: 2.0
  glueball:
    do_APE_smearing: true
    APE_smearing:
      n: 5
      alpha: 1.0
    interpolators:
      loops_GEVP: true
      rmin_GEVP: 2
      rmax_GEVP: 3
  Wloop: true
